{
   "data": {
      "aws_iam_policy_document": {
         "lambda_assume_role": {
            "statement": [
               {
                  "actions": [
                     "sts:AssumeRole"
                  ],
                  "effect": "Allow",
                  "principals": [
                     {
                        "identifiers": [
                           "lambda.amazonaws.com"
                        ],
                        "type": "Service"
                     }
                  ],
                  "sid": "1"
               }
            ]
         }
      },
      "terraform_remote_state": {
         "api_gateway": {
            "backend": "s3",
            "config": {
               "bucket": "akerr-lab-tfstate",
               "key": "projects/api-gateway/terraform.tfstate",
               "region": "us-east-1"
            }
         }
      }
   },
   "provider": {
      "aws": {
         "region": "us-east-1"
      }
   },
   "resource": {
      "aws_api_gateway_deployment": {
         "dev": {
            "depends_on": [
               "aws_api_gateway_method.post",
               "aws_api_gateway_integration.post"
            ],
            "rest_api_id": "${data.terraform_remote_state.api_gateway.outputs.id}",
            "stage_name": "dev"
         }
      },
      "aws_api_gateway_integration": {
         "post": {
            "http_method": "POST",
            "integration_http_method": "POST",
            "resource_id": "${aws_api_gateway_resource.hello.id}",
            "rest_api_id": "${data.terraform_remote_state.api_gateway.outputs.id}",
            "type": "AWS_PROXY",
            "uri": "${aws_lambda_function.hello.invoke_arn}"
         }
      },
      "aws_api_gateway_method": {
         "post": {
            "authorization": "NONE",
            "http_method": "POST",
            "resource_id": "${aws_api_gateway_resource.hello.id}",
            "rest_api_id": "${data.terraform_remote_state.api_gateway.outputs.id}"
         }
      },
      "aws_api_gateway_resource": {
         "hello": {
            "parent_id": "${data.terraform_remote_state.api_gateway.outputs.root_resource_id}",
            "path_part": "hello",
            "rest_api_id": "${data.terraform_remote_state.api_gateway.outputs.id}"
         }
      },
      "aws_iam_role": {
         "lambda": {
            "assume_role_policy": "${data.aws_iam_policy_document.lambda_assume_role.json}",
            "name": "akerr-lab-lambda"
         }
      },
      "aws_lambda_function": {
         "hello": {
            "description": "Test lambda that says hello.",
            "filename": "main.zip",
            "function_name": "akerr-lab-hello",
            "handler": "main",
            "memory_size": "128",
            "publish": true,
            "role": "${aws_iam_role.lambda.arn}",
            "runtime": "go1.x",
            "source_code_hash": "${filebase64sha256(\"main.zip\")}",
            "timeout": "3"
         }
      },
      "aws_lambda_permission": {
         "api_gateway": {
            "action": "lambda:InvokeFunction",
            "function_name": "${aws_lambda_function.hello.arn}",
            "principal": "apigateway.amazonaws.com",
            "source_arn": "${data.terraform_remote_state.api_gateway.outputs.execution_arn}/*/*/*",
            "statement_id": "AllowExecutionFromApiGateway"
         }
      }
   },
   "terraform": {
      "backend": {
         "s3": {
            "bucket": "akerr-lab-tfstate",
            "key": "projects/api-gateway/lambdas/hello/terraform.tfstate",
            "region": "us-east-1"
         }
      }
   }
}
